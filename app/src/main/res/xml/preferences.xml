<?xml version="1.0" encoding="utf-8"?>
<!-- res/xml/preferences.xml -->
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:key="temperature_units"
        android:title="Temperature Units"
        android:entries="@array/temperature_units"
        android:entryValues="@array/temperature_units_values"
        android:defaultValue="C"
        android:summary="%s"/>

    <ListPreference
        android:key="distance_units"
        android:title="Distance Units"
        android:entries="@array/distance_units"
        android:entryValues="@array/distance_units_values"
        android:defaultValue="metric"
        android:summary="%s"/>

</PreferenceScreen>
