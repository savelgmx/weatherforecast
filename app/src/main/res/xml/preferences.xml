<?xml version="1.0" encoding="utf-8"?>
<!-- res/xml/preferences.xml -->
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:key="temperature_units"
        android:title="Temperature Units"
        android:defaultValue="true"
        android:summaryOff="Fahrenheit"
        android:summaryOn="Celsius"/>

    <ListPreference
        android:key="distance_units"
        android:title="Distance Units"
        android:entries="@array/distance_units"
        android:entryValues="@array/distance_units_values"
        android:defaultValue="metric"
        android:summary="%s"/>

</PreferenceScreen>
